package pages

import "github.com/kayden-vs/snippetbox/internal/models"
import "github.com/kayden-vs/snippetbox/ui/html"

templ AccountPage(user *models.User, flash string, csrfToken string){
    @html.Base("Account", flash , true, csrfToken, accountContent(user))
}

templ accountContent(user *models.User) {
    <h2>Your Account</h2>
    <table>
        <tr>
            <th>Name</th>
            <th> { user.Name }</th>
        </tr>
        <tr>
            <th>Email</th>
            <th>{ user.Email }</th>
        </tr>
        <tr>
            <th>Joined</th>
            <th>{ user.Created.Format("January 2, 2006") }</th>
        </tr>
    </table>
    <br>
    <div style="margin-top: 1.5rem;">
        <a href="/account/password/update" class="button">Change password</a>
    </div>
}